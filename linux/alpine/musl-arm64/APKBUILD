# Contributor: haltroy <thehaltroy@gmail.com>
# Maintainer: haltroy <thehaltroy@gmail.com>
pkgname=fluxionviewer
pkgver=1.1
pkgrel=1
pkgdesc="Edit and view FLuxion files easily."
url="https://haltroy.com/en/fluxion"
arch="aarch64"
license="GPL-3-or-later"
depends=""
makedepends=""
checkdepends=""
options="!strip !check"
install=""
source=""
builddir="$srcdir/"
libdir="/usr/lib/$pkgname"
icon_path="/usr/share/icons/hicolor/2048x2048/apps"
shortcut_path="/usr/bin/$pkgname"

package() {
	mkdir -p "$pkgdir/$libdir" "$pkgdir/$icon_path" "$pkgdir/usr/share/applications" "$pkgdir/usr/bin"
	cp -r "$builddir../../../../publish/linux-musl-arm64/." "$pkgdir/$libdir/"
	cp "$builddir../../../../src/FluxionViewer/Assets/logo.png" "$pkgdir/$icon_path/fluxionviewer.png"
	install -Dm755 "$srcdir/../../../shortcut" "$pkgdir/$shortcut_path"
	install -Dm644 "$srcdir/../../../desktop.desktop" "$pkgdir/usr/share/applications/fluxionviewer.desktop"
}
sha512sums="SKIP"
