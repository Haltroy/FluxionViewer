# Maintainer: <haltroy> <thehaltroy@gmail.com>
pkgname=fluxionviewer-git
pkgver=1.1
pkgrel=1
pkgdesc="View and Edit Fluxion files."
url="https://haltroy.com/Fluxion"
license=(GPL-3.0-or-later)
provides=(fluxionviewer)
arch=(x86_64 aarch64)
makedepends=(dotnet-sdk)
options=("!strip")
source=("fluxionvewer::git+https://github.com/haltroy/FluxionViewer.git"
        fluxionviewer.desktop.in:"https://raw.githubusercontent.com/Haltroy/FluxionViewer/refs/heads/distribution/src/linux/desktop.desktop"
        fluxionviewer.in:"https://raw.githubusercontent.com/Haltroy/FluxionViewer/refs/heads/distribution/src/linux/shortcut"
        fluxionviewer.png.in:"https://raw.githubusercontent.com/Haltroy/FluxionViewer/refs/heads/distribution/src/FluxionViewer/Assets/logo.png")

build() {
  FV_ARCH="x64"
  if [ "$arch" = "x86_64" ]
  then
        FV_ARCH="x64"
  elif [ "$arch" = "aarch64" ]
  then
        FV_ARCH="arm64"
  fi
  dotnet publish \
        -c Release \
        -r linux-$FV_ARCH \
        -o "${srcdir}/${pkgname}" \
        FluxionViewer.Linux/FluxionViewer.Linux.csproj
  rm "${srcdir}/${pkgname}/FluxionViewer.Linux.dbg"
}

package() {
  mkdir -p "${pkgdir}/usr/lib/${pkgname}/"
  cp -r "${srcdir}/${pkgname}." "${pkgdir}/usr/lib/${pkgname}/"
  install -d "${pkgdir}/usr/lib/${pkgname}/"
  install -Dm644 ${srcdir}/${pkgname}.png "${pkgdir}/usr/share/icons/hicolor/2048x2048/apps/${pkgname}.png"
  install -Dm644 ${srcdir}/${pkgname}.desktop "${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -Dm755 ${srcdir}/${pkgname} "${pkgdir}/usr/bin/${pkgname}"
}
